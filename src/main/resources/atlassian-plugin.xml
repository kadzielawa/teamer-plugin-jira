  <servlet name="Hello World Servlet" key="add-project" class="teamerExt.jira.webwork.Project.ProjectServlet">
    <url-pattern>/addproject</url-pattern>
  </servlet>
  <servlet name="Hello World Servlet" key="add-user" class="teamerExt.jira.webwork.User.UserServlet">
    <url-pattern>/adduser</url-pattern>
  </servlet>

  <web-section key="admin_teamer-ext_planning_section"
               name="admin_teamer-ext_planning_section"
               location="admin_plugins_menu"
               weight="20"
               i18n-name-key="teamer-ext.admin.planning.page.web.section.name">
    <label key="teamer-ext.admin.planning.page.web.section.name" />
  </web-section>

  <web-item key="admin_teamer-ext_planning_webitem"
            name="admin_teamer-ext_planning_webitem"
            section="admin_plugins_menu/admin_teamer-ext_planning_section"
            weight="15"
            i18n-name-key="teamer-ext.admin.planning.page.web.item.name">
    <label key="teamer-ext.admin.planning.page.web.item.name" />
    <link linkId="admin_teamer-ext_planning_webitem_link">/secure/teamerAction.jspa</link>
  </web-item>

    <rest  key="projectmembersRest" path="/projectmembers" version="1.0"/>
    <rest  key="projectRest" path="/project" version="1.0"/>
    <rest  key="teamRest" path="/team" version="1.0"/>

</atlassian-plugin>
